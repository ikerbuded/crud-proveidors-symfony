{% extends 'base.html.twig' %}

{% block title %}Llistat Proveidors
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-3">Llista de Proveïdors</h1>
		{% include "partials/alerts.html.twig" %}
		<table class="table table-striped table-bordered text-center">
			<thead class="table-primary">
				<tr>
					<th>Nom</th>
					<th>Email</th>
					<th>Telèfon de contacte</th>
					<th>Tipus</th>
					<th>Estat</th>
					<th>Accions</th>
				</tr>
			</thead>
			<tbody>
				{% for index, proveidor in proveidors %}
					<tr>
						<th>{{ proveidor.nom}}</th>
						<td>{{ proveidor.email }}</td>
						<td>{{ proveidor.telefon }}</td>
						<td>{{ proveidor.tipus }}</td>
						<td>
							{% if proveidor.actiu %}
								<span class="badge bg-success">Actiu</span>
							{% else %}
								<span class="badge bg-danger">No Actiu</span>
							{% endif %}
						</td>
						<td>
							<a href="{{ path('app_editar_proveidor', {'id': proveidor.id}) }}" class="btn btn-warning bi bi-pencil-fill"></a>
							<a href="{{ path('app_eliminar_proveidor', {'id': proveidor.id}) }}" class="btn btn-danger bi bi-trash-fill"></a>
						</td>
					</tr>
				{% else %}
					<tr class="table-warning">
						<td colspan="6">No s'han trobat proveïdors</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
