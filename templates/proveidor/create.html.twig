{% extends "base.html.twig" %}

{% block title %}Afegir Proveïdor
{% endblock %}

{% block body %}
	<div class="row" style="margin-top:40px">
		<div class="offset-md-3 col-md-6">
			<div class="card">
				<div class="card-header text-center">
					Afegir Proveïdor
				</div>
				<div class="card-body" style="padding:30px">

					<form action="{{ path('app_guardar_proveidor')}}" method="post">

						<div class="mb-3">
							<label for="name" class="form-label mt-4">Nom:</label>
							<input type="text" id="name" name="name" class="form-control" placeholder="Nom del proveïdor">
						</div>

						<div class="mb-3">
							<label for="email" class="form-label mt-4">Email:</label>
							<input type="text" name="email" id="email" class="form-control" placeholder="Correu electrònic del proveïdor">
						</div>

						<div class="mb-3">
							<label for="telefon" class="form-label mt-4">Telèfon de Contacte:</label>
							<input type="text" name="telefon" id="telefon" class="form-control" placeholder="Telèfon de contacte del proveïdor">
						</div>

						<div class="mb-3">
							<label for="telefon" class="form-label mt-4">Tipus:</label>
							<input class="form-check-input" type="radio" name="tipus" id="hotel" value="Hotel">
							<label class="form-check-label" for="hotel">
								Hotel
							</label>

							<input class="form-check-input" type="radio" name="tipus" id="pista" value="Pista">
							<label class="form-check-label" for="pista">
								Pista
							</label>

							<input class="form-check-input" type="radio" name="tipus" id="complement" value="Complement">
							<label class="form-check-label" for="complement">
								Complement
							</label>
						</div>

						<div class="mb-3">
							<input class="form-check-input" type="checkbox" name="estat" id="estat">
							<label class="form-check-label" for="estat">Està Actiu?</label>
						</div>

						<button type="submit" class="btn btn-success">Afegir proveïdor</button>
						<a href="{{ path('app_index_proveidor') }}" class="btn btn-secondary">Tornar</a>

					</form>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
