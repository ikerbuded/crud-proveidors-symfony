{% extends 'base.html.twig' %}

{% block title %}Detalls del Proveïdor
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1 class="mb-3">Detalls del Proveïdor</h1>
		<div class="card">
			<div class="card-header text-center bg-light">
				Informació del Proveïdor
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-6">
						<strong>Nom:</strong>
						<p>{{ proveidor.nom }}</p>
					</div>
					<div class="col-md-6">
						<strong>Email:</strong>
						<p>{{ proveidor.email }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<strong>Telèfon:</strong>
						<p>{{ proveidor.telefon }}</p>
					</div>
					<div class="col-md-6">
						<strong>Tipus:</strong>
						<p>{{ proveidor.tipus }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<strong>Estat:</strong>
						{% if proveidor.actiu %}
							<span class="badge bg-success">Actiu</span>
						{% else %}
							<span class="badge bg-danger">No Actiu</span>
						{% endif %}
					</div>
					<div class="col-md-6">
						<strong>Data de Creació:</strong>
						<p>{{ proveidor.dataCreacio|date('d/m/Y H:i') }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-md-6">
						<strong>Data d'Actualització:</strong>
						<p>{{ proveidor.dataActualitzacio|date('d/m/Y H:i') }}</p>
					</div>
				</div>
				<div class="text-center mt-4">
					<a href="{{ path('app_index_proveidor') }}" class="btn btn-secondary">Tornar al Llistat</a>
					<a href="{{ path('app_editar_proveidor', {'id': proveidor.id}) }}" class="btn btn-warning">Editar Proveïdor</a>
					<a href="{{ path('app_eliminar_proveidor', {'id': proveidor.id}) }}" class="btn btn-danger">Eliminar Proveïdor</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
